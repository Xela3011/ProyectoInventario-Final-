@model IEnumerable<ProyectoInventario.Models.Articulo>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Artículos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoInventario.descripcion_tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion_articulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.existencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo_unitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoInventario.descripcion_tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion_articulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.existencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo_unitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_articulo }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_articulo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_articulo })
        </td>
    </tr>
}

</table>
